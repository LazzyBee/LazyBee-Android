<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" android:layout_height="56dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Large Text"
        android:id="@+id/lbSettingLimitName"
        android:layout_marginLeft="16dp"
        android:maxLines="3"
        android:layout_alignTop="@+id/txtLimit"
        android:layout_alignParentStart="true"
        android:layout_marginTop="8dp"
        android:textColor="@color/teal_500" />

    <EditText
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtLimit"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="16dp"
        android:inputType="number"
        android:textColor="@color/teal_500" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:id="@+id/lbEror"
        android:textColor="@color/red_500"
        android:layout_alignStart="@+id/lbSettingLimitName"
        android:layout_marginTop="3dp"
        android:layout_below="@+id/lbSettingLimitName"
        android:textSize="12dp" />
</RelativeLayout>
