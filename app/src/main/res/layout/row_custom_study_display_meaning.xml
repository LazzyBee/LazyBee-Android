<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/mCardView"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/lbSettingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toStartOf="@+id/mSwitch"
            android:singleLine="true"
            android:text="@string/setting_display_meaning"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="@color/grey_600" />

        <Switch
            android:id="@+id/mSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lbSettingName"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/mSetPositionMeaning"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:orientation="vertical"
        android:visibility="visible">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/setting_position_meaning"
            android:id="@+id/lbPositionMeaning"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/position_meaning_display_text_color" />
    </RelativeLayout>
</LinearLayout>