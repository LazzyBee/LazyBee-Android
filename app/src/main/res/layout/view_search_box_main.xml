<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/border"
    android:focusableInTouchMode="true">

    <AutoCompleteTextView
        android:id="@+id/mAutoSearchDictionaryBox"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btnSearchDictionnary"
        android:layout_toStartOf="@+id/btnSearchDictionnary"
        android:background="@android:color/transparent"
        android:hint="@string/drawer_dictionary"
        android:textColor="@color/grey_900"
        android:textColorHint="@color/hint_text_searchbox_home_screen"
        android:textCursorDrawable="@drawable/color_cursor_searchbox_home_screen"
        android:layout_marginLeft="5dp"
        android:singleLine="true" />
    <!--android:focusable="false"
    android:focusableInTouchMode="false"-->

    <ImageView
        android:id="@+id/mCancelSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="6dp"
        android:layout_toLeftOf="@+id/btnSearchDictionnary"
        android:layout_toStartOf="@+id/btnSearchDictionnary"
        android:src="@drawable/ic_clear_black_18dp"
        android:visibility="gone" />

    <ImageButton
        android:id="@+id/btnSearchDictionnary"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/background_button_searchbox_home_screen"
        android:onClick="onSearchDictionary"
        android:src="@drawable/abc_ic_search_api_mtrl_alpha" />

</RelativeLayout>