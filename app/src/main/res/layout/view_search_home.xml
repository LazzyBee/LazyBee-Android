<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    android:background="@drawable/border"
    android:focusableInTouchMode="true">

    <!--android:focusable="false"
    android:focusableInTouchMode="false"-->

    <android.support.v7.widget.SearchView
        android:id="@+id/mSearchCard"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/btnSearchDictionnary"
        android:background="@drawable/border" />

    <ImageButton
        android:id="@+id/btnSearchDictionnary"
        android:layout_width="40dp"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@color/background_button_searchbox_home_screen"
        android:onClick="onSearchDictionary"
        android:src="@drawable/abc_ic_search_api_mtrl_alpha" />

</RelativeLayout>