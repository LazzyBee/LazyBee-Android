<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="@string/setting_speech_rate"
            android:id="@+id/textView3"
            android:layout_gravity="left"
            android:textColor="@color/grey_600"
            android:layout_marginLeft="16dp"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="16dp" />
    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_300"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">

            <SeekBar
                android:id="@+id/mSlideSpeechRate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@+id/textView12"
                android:layout_toLeftOf="@+id/lbSeekVaueChange"
                android:layout_toStartOf="@+id/lbSeekVaueChange" />

            <ImageView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_turtle_teal"
                android:textColor="@color/blue_500"
                android:layout_alignBottom="@+id/mSlideSpeechRate"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="16dp" />

            <ImageView
                android:id="@+id/lbSeekVaueChange"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_rabbit_teal"
                android:textColor="@color/red_500"
                android:layout_alignTop="@+id/mSlideSpeechRate"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="16dp" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>