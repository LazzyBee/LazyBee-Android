<!-- A DrawerLayout is intended to be used as the top-level content view using match_parent for both width and height to consume the full space available. -->
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!--  <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical">-->


    <!-- As the main content view, the view below consumes the entire
         space available using match_parent in both dimensions. -->
    <FrameLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<include-->
        <!--layout="@layout/tool_bar"/>-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical"
            android:padding="3dp">

            <android.support.v7.widget.CardView
                android:id="@+id/view"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                app:cardElevation="@dimen/setting_card_view_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="fill_parent"
                        android:layout_height="100dp"
                        android:background="@color/teal_500"
                        android:paddingBottom="15dp"
                        android:paddingTop="15dp">

                        <TextView
                            android:id="@+id/lbNameCourse"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_horizontal"
                            android:text="10000 EngLish Word "
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="30dp" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:id="@+id/mDue"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:paddingBottom="20dp"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:paddingTop="20dp">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_alignStart="@+id/textView5"
                            android:text="@string/due_today"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/teal_500" />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentStart="true"
                            android:layout_below="@+id/textView4"
                            android:text="@string/total_new_learn"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/teal_500" />

                        <TextView
                            android:id="@+id/textView6"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/textView5"
                            android:layout_below="@+id/textView5"
                            android:text="@string/total_cards"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/teal_500" />

                        <TextView
                            android:id="@+id/lbDueToday2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_above="@+id/textView5"
                            android:layout_marginStart="55dp"
                            android:layout_toEndOf="@+id/textView5"
                            android:text="00 00 00"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="#000000" />

                        <TextView
                            android:id="@+id/lbTotalsCount2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignEnd="@+id/lbDueToday2"
                            android:layout_below="@+id/lbTotalNewCount2"
                            android:text="400"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/teal_500" />

                        <TextView
                            android:id="@+id/lbTotalNewCount2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/lbTotalsCount2"
                            android:layout_below="@+id/lbDueToday2"
                            android:text="300"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/teal_500" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/mCongratulations"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal"
                        android:padding="16dp"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:text="@string/congratulations"
                            android:textAppearance="?android:attr/textAppearanceMedium"
                            android:textColor="@color/teal_500" />

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/textView"
                            android:layout_centerHorizontal="true"
                            android:text="@string/message_congratulations"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="@color/grey_600" />
                    </RelativeLayout>

                    <!--<LinearLayout-->
                    <!--android:orientation="vertical"-->
                    <!--android:layout_width="fill_parent"-->
                    <!--android:layout_height="1dp"-->
                    <!--android:background="@color/grey_300"></LinearLayout>-->


                    <!--<TextView-->
                    <!--android:id="@+id/lbDueToday"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_gravity="center_horizontal"-->
                    <!--android:text="Medium Text"-->
                    <!--android:textAppearance="?android:attr/textAppearanceMedium"-->
                    <!--android:visibility="visible" />-->


                </LinearLayout>
            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:id="@+id/mCardViewStudy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:autoText="false"
                android:onClick="onBtnStudyOnClick"
                android:background="@color/teal_500"
                android:nestedScrollingEnabled="false"
                app:cardBackgroundColor="@color/teal_500"
                app:cardElevation="@dimen/setting_card_view_elevation">

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/teal_500"
                    android:gravity="center"
                    android:padding="16dp"
                    android:text="@string/study"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/white" />
            </android.support.v7.widget.CardView>


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <android.support.v7.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="3dp"
                    android:layout_weight="1"
                    android:background="@color/white"
                    android:onClick="_onbtnReviewOnClick">

                    <Button
                        android:id="@+id/btnReview"
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="@string/review"
                        android:textColor="@color/teal_500"
                        android:visibility="gone" />

                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="@string/review"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/teal_500"
                        android:padding="10dp"
                        android:gravity="center" />
                </android.support.v7.widget.CardView>


                <android.support.v7.widget.CardView
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="10dp"
                    android:layout_weight="1"
                    android:onClick="_onLearnMoreClick">

                    <Button
                        android:id="@+id/btnCustomStudy"
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:visibility="gone"
                        android:text="@string/learn_more"
                        android:textColor="@color/teal_500" />
                    <TextView
                        android:layout_width="fill_parent"
                        android:layout_height="fill_parent"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight="1"
                        android:background="@color/white"
                        android:text="@string/learn_more"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@color/teal_500"
                        android:padding="10dp"
                        android:gravity="center" />
                </android.support.v7.widget.CardView>
            </LinearLayout>

            <android.support.v7.widget.CardView
                android:id="@+id/mCardViewCustomStudy"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:nestedScrollingEnabled="false">

                <RelativeLayout
                    android:id="@+id/mCustomLearn"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="5dp"
                    android:onClick="_onCustomStudyOnClick">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"
                        android:text="@string/custom_study"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/grey_600" />

                    <ImageView
                        android:id="@+id/imageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_action_settings"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/textView9"
                        android:layout_toStartOf="@+id/textView9" />
                </RelativeLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>


    </FrameLayout>

    <!-- android:layout_gravity="start" tells DrawerLayout to treat
         this as a sliding drawer on the left side for left-to-right
         languages and on the right side for right-to-left languages.
         If you're not building against API 17 or higher, use
         android:layout_gravity="left" instead. -->
    <!-- The drawer is given a fixed width in dp and extends the full height of
         the container. -->
    <fragment
        android:id="@+id/navigation_drawer"
        android:name="com.born2go.lazzybee.fragment.NavigationDrawerFragment"
        android:layout_width="@dimen/navigation_drawer_width"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        tools:layout="@layout/fragment_navigation_drawer" />
    <!--</LinearLayout>-->
</android.support.v4.widget.DrawerLayout>
