<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <!--<android.support.v7.widget.CardView-->
    <!--android:id="@+id/mCardView"-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="56dp"-->
    <!--android:visibility="visible"-->
    <!--card_view:cardElevation="@dimen/setting_card_view_elevation"-->
    <!--card_view:cardPreventCornerOverlap="false">-->

    <RelativeLayout
        android:id="@+id/mCardView"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <TextView
            android:id="@+id/lbSettingName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="8dp"
            android:layout_toStartOf="@+id/mSwitch"
            android:singleLine="true"
            android:text="@string/notification"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textColor="#616161" />

        <Switch
            android:id="@+id/mSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/lbSettingName"
            android:layout_alignParentEnd="false"
            android:layout_alignParentRight="true" />

    </RelativeLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/mSetUpNotification">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_300"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"></LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/txtTimeNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:text="@string/setting_set_time_notification"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="@color/textcolorPrimary" />
        </RelativeLayout>
    </LinearLayout>

    <!--</android.support.v7.widget.CardView>-->
</LinearLayout>