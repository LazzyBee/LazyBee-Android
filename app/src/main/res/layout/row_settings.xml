<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="48dp">
    <!--<android.support.v7.widget.CardView-->
        <!--android:id="@+id/mCardView"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="56dp"-->
        <!--android:visibility="visible"-->
        <!--card_view:cardElevation="@dimen/setting_card_view_elevation"-->
        <!--card_view:cardPreventCornerOverlap="false">-->

        <RelativeLayout
            android:id="@+id/mCardView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="8dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/lbSettingName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/notification"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#616161"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true"
                android:singleLine="true"
                android:layout_toStartOf="@+id/mSwitch"
                android:layout_marginRight="8dp" />

            <Switch
                android:id="@+id/mSwitch"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_alignBaseline="@+id/lbSettingName" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="0"
                android:id="@+id/lbLimit"
                android:layout_alignEnd="@+id/mSwitch"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:layout_alignTop="@+id/lbSettingName"
                android:layout_marginTop="5dp"
                android:layout_alignBaseline="@+id/lbSettingName" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgGoto"
                android:src="@drawable/ic_arrow_right_teal"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:visibility="gone" />

        </RelativeLayout>
    <!--</android.support.v7.widget.CardView>-->
</RelativeLayout>