<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.born2go.lazzybee.activity.SettingActivity"
    >

    <!--<fragment-->
    <!--android:layout_width="fill_parent"-->
    <!--android:layout_height="fill_parent"-->
    <!--android:name="com.born2go.lazzybee.fragment.FragmentSetting"-->
    <!--android:id="@+id/fragment2"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:layout_alignParentStart="true" />-->

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="48dp"
        android:layout_marginBottom="1px"
        android:visibility="gone"
        android:id="@+id/mCardViewNotification">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/notificaion"
                android:id="@+id/textView"
                android:textColor="@color/grey_600" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Switch"
                android:id="@+id/mSwitchNotification"
                android:layout_alignParentEnd="false"
                android:layout_alignBaseline="@+id/textView"
                android:layout_alignParentRight="true" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/btn_update"
        android:id="@+id/textView3"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/teal_200" />

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:id="@+id/mCardViewCheckUpdate"
        android:onClick="onCardViewCheckUpdateClick">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/action_check_update_database"

                android:textColor="@color/grey_600"
                android:gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="0.1dp"/>
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="1px"
        android:id="@+id/mCardViewAutoCheckUpdate"
        android:onClick="onCardViewAutoCheckUpdateClick">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/auto_check_update"
                android:id="@+id/textView1"
                android:textColor="@color/grey_600"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Switch"
                android:layout_alignParentEnd="false"
                android:layout_alignBaseline="@+id/textView1"
                android:layout_alignParentRight="true"
                android:id="@+id/mSwitchAutoCheckUpdate" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="5dp"></LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:layout_marginBottom="1px"
        android:id="@+id/mCardViewDebugInformation"
        android:onClick="onCardViewDebugInformationClick">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/debug_infor"
                android:id="@+id/textView2"
                android:textColor="@color/grey_600"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Switch"

                android:layout_alignParentEnd="false"
                android:layout_alignBaseline="@+id/textView2"
                android:layout_alignParentRight="true"
                android:id="@+id/mSwitchDebugInformation" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="5dp"/>
    <android.support.v7.widget.CardView
        android:layout_width="fill_parent"
        android:layout_height="56dp"
        android:id="@+id/mCardViewLanguage"
        android:onClick="onCardViewLanguageClick">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingTop="8dp"
            android:paddingRight="16dp"
            android:paddingBottom="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="@string/language"

                android:textColor="@color/grey_600"
                android:gravity="center_horizontal"
                android:layout_centerVertical="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>


</LinearLayout>
